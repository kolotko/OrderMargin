@page "/Orders"
<h3>Orders</h3>

@using Dto
@using Radzen.Blazor

<h3>Wczytaj plik CSV</h3>

<InputFile OnChange="HandleFileSelected" accept=".csv" />
<br /><br />

@if (_orders != null)
{
    <RadzenDataGrid Data="@_orders" TItem="OrderFileDto" ColumnWidth="200px">
        <Columns>
            <RadzenDataGridColumn TItem="OrderFileDto" Property="@nameof(OrderFileDto.OrderId)" Title="@nameof(OrderFileDto.OrderId)" />
            <RadzenDataGridColumn TItem="OrderFileDto" Property="@nameof(OrderFileDto.Date)" Title="@nameof(OrderFileDto.Date)" FormatString="{0:yyyy-MM-dd}"/>
            <RadzenDataGridColumn TItem="OrderFileDto" Property="@nameof(OrderFileDto.Source)" Title="@nameof(OrderFileDto.Source)" />
            <RadzenDataGridColumn TItem="OrderFileDto" Property="@nameof(OrderFileDto.LastName)" Title="@nameof(OrderFileDto.LastName)" />
            <RadzenDataGridColumn TItem="OrderFileDto" Property="@nameof(OrderFileDto.Phone)" Title="@nameof(OrderFileDto.Phone)" />
            <RadzenDataGridColumn TItem="OrderFileDto" Property="@nameof(OrderFileDto.Email)" Title="@nameof(OrderFileDto.Email)" />
            <RadzenDataGridColumn TItem="OrderFileDto" Property="@nameof(OrderFileDto.ProductName)" Title="@nameof(OrderFileDto.ProductName)" />
            <RadzenDataGridColumn TItem="OrderFileDto" Property="@nameof(OrderFileDto.ProductId)" Title="@nameof(OrderFileDto.ProductId)" />
            <RadzenDataGridColumn TItem="OrderFileDto" Property="@nameof(OrderFileDto.Sku)" Title="@nameof(OrderFileDto.Sku)" />
            <RadzenDataGridColumn TItem="OrderFileDto" Property="@nameof(OrderFileDto.Ean)" Title="@nameof(OrderFileDto.Ean)" />
            <RadzenDataGridColumn TItem="OrderFileDto" Property="@nameof(OrderFileDto.Quantity)" Title="@nameof(OrderFileDto.Quantity)" />
            <RadzenDataGridColumn TItem="OrderFileDto" Property="@nameof(OrderFileDto.Price)" Title="@nameof(OrderFileDto.Price)" />
            <RadzenDataGridColumn TItem="OrderFileDto" Property="@nameof(OrderFileDto.Currency)" Title="@nameof(OrderFileDto.Currency)" />
            <RadzenDataGridColumn TItem="OrderFileDto" Property="@nameof(OrderFileDto.ShippingCost)" Title="@nameof(OrderFileDto.ShippingCost)"/>
            <RadzenDataGridColumn TItem="OrderFileDto" Property="@nameof(OrderFileDto.ShippingMethod)" Title="@nameof(OrderFileDto.ShippingMethod)" />
            <RadzenDataGridColumn TItem="OrderFileDto" Property="@nameof(OrderFileDto.TrackingNumber)" Title="@nameof(OrderFileDto.TrackingNumber)" />
            <RadzenDataGridColumn TItem="OrderFileDto" Property="@nameof(OrderFileDto.OrderStatus)" Title="@nameof(OrderFileDto.OrderStatus)" />
            <RadzenDataGridColumn TItem="OrderFileDto" Property="@nameof(OrderFileDto.TotalCost)" Title="@nameof(OrderFileDto.TotalCost)" />
        </Columns>
    </RadzenDataGrid>
}

